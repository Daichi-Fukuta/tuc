<div class="col-md-8 offset-md-2 mt-3">
  <div class="user-box">
    <h3 class="text-center"><%= t ".title" %></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :nick_name %><br />
        <%= f.text_field :nick_name, class: "form-control" %>
      </div>
      <div class="row">
        <div class="col">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="col">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.label :last_name_phonetic %><br />
          <%= f.text_field :last_name_phonetic, class: "form-control" %>
        </div>
        <div class="col">
          <%= f.label :first_name_phonetic %><br />
          <%= f.text_field :first_name_phonetic, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender %><br />
        <%= f.collection_select :gender_id, Gender.all, :id, :gender, { include_blank: t(".include_blank") },  { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= t(".minimum_password_length", length: @minimum_password_length) %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :birthday %>
        <%= f.date_field :birthday, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit t(".submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
      <%= render "devise/shared/social_login" %>
  </div>
</div>