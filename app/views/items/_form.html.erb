<%= form_with model: item, local: true do |form| %> 
<%= render "shared/errors", obj: item %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,  placeholder: '教科書のタイトルを入力してください', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :new_image %>
    <%= form.file_field :new_image, class: "form-control" %>
  </div>
<div class="form-group">
  <%= form.label :category_id %>
  <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: t('.include_blank') }, {class: 'form-control' } %>
</div>
  <div class="form-group">
    <%= form.label :state %>
    <%= form.collection_select :state_id, State.all, :id, :state, { include_blank: t(".include_blank") },  { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :postage %>
    <%= form.collection_select :postage_id, Postage.all, :id, :postage, { include_blank: t(".include_blank") },  { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :region %>
    <%= form.collection_select :region_id, Region.all, :id, :region, { include_blank: t(".include_blank") },  { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :shipping_date %>
    <%= form.collection_select :shipping_date_id, ShippingDate.all, :id, :shipping_date, { include_blank: t(".include_blank") },  { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, placeholder: '価格を入力して下さい', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: 'この商品についての説明を入力して下さい', rows: 10, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>
