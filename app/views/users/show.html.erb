<div class="col-md-10 offset-md-1 mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="text-center">
        <h2><%= @user.nick_name %></h2>
        <p><%= @user.description %></p>
      </div>
    </div>
  </div>
</div>
<% @items.each do |item| %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
    <%= show_item_image item %>
    <h4 class="mt-2"><%= link_to item.name, item_path(item) %></h4>
    <div><%= t(".price_yen", price: (number_with_delimiter item.price)) %></div>
  </div>
<% end %>